<!-- Page Content -->
<div class="container">
  <div class="container">
    <div class="row">
      <div class="col-lg-3">
        <h1 class="my-4">Categories</h1>
        <div class="list-group">
          <p class="list-group-item"><%= link_to 'Toys', pages_toys_path, class: "highlight" %></p>
          <p class="list-group-item"><%= link_to 'Films', pages_films_path %></p>
          <p class="list-group-item"><%= link_to 'Gadgets', pages_gadgets_path %></p>
        </div>
      </div>
      <div class="col-lg-9">
        <div class="row">
          <% 1.times do %>
            <% @toys.each do |toy| %>
              <div class="col-lg-4">
                <div class="padd">
                  <div class="card h-100">
                    <img class="card-img-top" height="200" width="100"  alt="Toy image was't found" src=<%= toy.img_url %>>
                    <div class="card-body">
                      <h4 class="card-title">
                        <a href="#"><%= toy.title %></a>
                      </h4>
                      <h5>$<%= toy.price %></h5>
                      <p class="card-text"><%= toy.description %></p>
                      <% if signed_in? %>
                        <button type="button" class="btn btn-success">Buy</button>
                        <% if current_user.admin %>
                          <button type="button" class="btn btn-warning" ><%= link_to 'Edit', edit_product_path(toy), class: "color_inherit" %></button>
                          <button type="button" class="btn btn-danger"><%= link_to 'Destroy', product_path(toy),
                                                                           method: :delete,
                                                                           data: { confirm: 'Are you sure?' },
                                                                           class: "color_inherit" %></button>
                        <% end %>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

